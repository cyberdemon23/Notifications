@{
    ViewBag.Title = "Log In";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm()) {

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.Label("userName", "User Name")
                @Html.TextBox("userName")
            </li>
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
}
</section>